<%- include("partials/header") %>

<div class="container">

  <%- include("partials/navbar") %>

  <div class="form-container">

    <h2>Edit post</h2>

    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
      <div class="form-group"><input class="form-control" required="required" type="text" placeholder="title" name="title" value="<%=blog.title%>"></div>  
      <div class="form-group"><input class="form-control" type="url" placeholder="image url" name="image" value="<%=blog.image%>"></div>
      <div class="form-group"><textarea class="form-control" required="required" placeholder="blog post body" name="body"><%-blog.body.split(/\r?\n/).join("&#13;&#10;&#13;&#10;")%></textarea></div>
      <div class="form-group"><button class="btn btn-md btn-info">Submit</button></div>        
    </form>
  </div>

</div>

<%- include("partials/footer") %>